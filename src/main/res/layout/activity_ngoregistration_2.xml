<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_pg4"
    android:layout_height="match_parent"
    tools:context=".NgoRegistration2">
    <TextView
        android:layout_marginTop="10dp"
        android:fontFamily="@font/source_sans_pro_bold"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:textColor="#8A2BE2"
        android:text="NGO NAME"
        android:layout_height="wrap_content"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/etNgoName"
            android:layout_width="match_parent"
            android:hint="Enter Ngo Name"
            android:textColor="#000000"
            android:textColorHint="#d3d3d3"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:fontFamily="@font/source_sans_pro_bold"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:textColor="#8A2BE2"
        android:text="CITY"
        android:layout_height="wrap_content"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/etCity"
            android:layout_width="match_parent"
            android:hint="CITY"
            android:textColor="#000000"
            android:textColorHint="#d3d3d3"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:fontFamily="@font/source_sans_pro_bold"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:textColor="#8A2BE2"
        android:text="ADDRESS"
        android:layout_height="wrap_content"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/etNgoAddress"
            android:layout_width="match_parent"
            android:hint="Enter Ngo Address"
            android:textColor="#000000"
            android:textColorHint="#d3d3d3"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:fontFamily="@font/source_sans_pro_bold"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:textColor="#8A2BE2"
        android:text="CONTACT"
        android:layout_height="wrap_content"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/etContact"
            android:maxLength="10"
            android:layout_width="match_parent"
            android:inputType="number"
            android:hint="PHONE NUM"
            android:textColor="#000000"
            android:textColorHint="#d3d3d3"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:fontFamily="@font/source_sans_pro_bold"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:textColor="#8A2BE2"
        android:text="EMAIL"
        android:layout_height="wrap_content"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:hint="NGO'S EMAIL ID "
            android:textColor="#000000"
            android:textColorHint="#d3d3d3"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:focusableInTouchMode="false"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/source_sans_pro_bold"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:textColor="#8A2BE2"
        android:text="DESCRIPTION"
        android:layout_height="wrap_content"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:hint="Brief description of fields where the NGO is involved"
            android:textColor="#000000"
            android:textColorHint="#d3d3d3"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imgView"
        android:src="@drawable/ic_baseline_image_search_24"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:scaleType="fitXY"
        android:layout_width="45dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>
        <android.widget.Button
            android:id="@+id/btnSubmit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/source_sans_pro_bold"
            android:text="SUBMIT"
            android:textColor="#FFFFFF" />
    </LinearLayout>
    </LinearLayout>